<!-- 
	The structure of this file is detailed at:
	http://localhost:8085/source/xref/Current/officecfg/registry/schema/org/openoffice/Office/OptionsDialog.xcs
 -->
<oor:component-data oor:name="OptionsDialog" oor:package="org.openoffice.Office"
	xmlns:oor="http://openoffice.org/2001/registry"
	xmlns:xs="http://www.w2.org/2001/XMLSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <node oor:name="Nodes">
    <node oor:name="it.acca_esse.ext.lo_global_log.options.node" oor:op="fuse">
      <prop oor:name="Label">
		<value xml:lang="en">Global Logger Options</value>
		<value xml:lang="it">Opzioni per 'Global Logger'</value>
      </prop>
      <!-- thepage for node -->
      <prop oor:name="OptionsPage">
        <value>%origin%/dialogs/leaf_logging_root/root_node.xdl</value>
      </prop>
      <prop oor:name="AllModules">
        <value>true</value>
      </prop>
      <prop oor:name="GroupId">
        <value>it.acca_esse.ext.lo_global_log.options.node.group</value>
      </prop>
      <prop oor:name="GroupIndex">
        <value>0</value>
      </prop>
      <node oor:name="Leaves">
        <!-- leaf for logging options -->
        <node oor:name="it.acca_esse.ext.lo_global_log.options.node.Logging" oor:op="fuse">
        <!-- the following id is used by the extension manager to retrieve the option leaf -->
          <prop oor:name="Id">
            <value>it.acca_esse.ext.lo_global_log</value>
          </prop>
          <prop oor:name="Label">
            <value xml:lang="en-US">Logging</value>
            <value xml:lang="it">Logging</value>
          </prop>
          <prop oor:name="OptionsPage">
            <value>%origin%/dialogs/leaf_logging.xdl</value>
          </prop>
          <prop oor:name="EventHandlerService">
	        <!-- Service name implementing the handler -->
            <value>it.acca_esse.ext.lo_global_log.options.ManageLoggingOptions</value>
          </prop>
          <prop oor:name="GroupId">
            <value>it.acca_esse.ext.lo_global_log.options.node</value>
          </prop>
          <prop oor:name="GroupIndex">
            <value>1</value>
          </prop>
        </node>
        <!-- end leaf for logging options -->
      </node>
    </node>
  </node>
</oor:component-data> 
